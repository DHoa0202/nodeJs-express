<h1 id="category">Phân loại hàng hóa</h1>
<table class="table table-striped table-hover">
  <thead>
    <!-- ATTRIBUTES're NAME -->
    <tr class="text-center">
      <th>id</th>
      <th>name</th>
      <th>control</th>
    </tr>
    <!-- SHOW DETAILS -->
    <tr>
      <td colspan="3">
        <form class="d-flex gap-3" action="/categories" method="post">
          <input class="form-control" type="number" value="<%-entity.id%>" name="id">
          <input class="form-control" type="text" value="<%-entity.name%>" name="name">
          <div class="text-center d-flex gap-3">
            <button type="submit" class="btn btn-outline-success" formaction="/insert_categories">Create</button>
            <button type="submit" class="btn btn-outline-warning" formaction="/update_categories">Update</button>
          </div>
        </form>
      </td>
    </tr>
  </thead>
  <!-- DISPLAY LIST OF DATA -->
  <tbody>
    <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td>
          <%= data[i].id %>
        </td>
        <td>
          <%= data[i].name %>
        </td>
        <td class="text-end">
          <a href="/categories/<%-data[i].id%>">detail</a>
          <button onclick="
            if(confirm('Xác nhận xóa <%-data[i].name%>')) location.href = `/delete_categories/<%-data[i].id%>`
          " type="button" class="btn btn-outline-danger">delete</button>
        </td>
      </tr>
      <% } %>
  </tbody>
</table>