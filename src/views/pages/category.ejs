<h1 id="category">Phân loại hàng hóa</h1>
<table class="table table-striped table-hover">
  <thead>
    <!-- ATTRIBUTES're NAME -->
    <tr class="text-center">
      <th>id</th>
      <th>name</th>
      <th>control</th>
    </tr>
    <!-- SHOW DETAILS -->
    <tr>
      <td><input class="form-control" type="number" value="<%-entity.id%>" form="categoryForm" name="id"></td>
      <td><input class="form-control" type="text" value="<%-entity.name%>" form="categoryForm" name="name"></td>
      <td>
        <form class="d-flex gap-3 justify-content-end" action="/categories" method="post" id="categoryForm">
          <button type="submit" class="btn btn-outline-success" formaction="/insert_categories">Create</button>
          <button type="submit" class="btn btn-outline-warning" formaction="/update_categories">Update</button>
          <button type="reset" class="btn btn-outline-secondary ms-1">clear</button>
        </form>
      </td>
    </tr>
  </thead>
  <!-- DISPLAY LIST OF DATA -->
  <tbody>
    <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td>
          <%= data[i].id %>
        </td>
        <td>
          <%= data[i].name %>
        </td>
        <td class="text-end">
          <a href="/categories/<%-data[i].id%>">detail</a>
          <button onclick="
            if(confirm('Confirm deletion <%-data[i].name%>')) location.href = `/delete_categories/<%-data[i].id%>`
          " type="button" class="btn btn-outline-danger">delete</button>
        </td>
      </tr>
      <% } %>
  </tbody>
</table>