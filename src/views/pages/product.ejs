<h1 id="product">Sản phẩm</h1>
<table class="table table-striped table-hover">
  <thead>
    <!-- ATTRIBUTES're NAME -->
    <tr>
      <th>image</th>
      <th>id</th>
      <th>name</th>
      <th>price</th>
      <th>quantity</th>
      <th>regDate</th>
      <th>category_name</th>
      <th>control</th>
    </tr>
    <!-- SHOW DETAILS -->
    <tr>
      <td><img src="<%-entity.image%>" alt="<%-entity.image%>" width="64px"></td>
      <td><input class="form-control" type="number" value="<%-entity.id%>" name="id"></td>
      <td><input class="form-control" type="text" value="<%-entity.name%>" name="name"></td>
      <td><input class="form-control" type="number" step=".1" value="<%-entity.price%>" name="price"></td>
      <td><input class="form-control" type="number" value="<%-entity.quantity%>" name="quantity"></td>
      <td>
        <span class="form-control bg-secondary text-nowrap bg-opacity-25">
          <%= date(entity.regDate, 'LLLL' )%>
        </span>
      </td>
      <td>
        <select class="form-control border-warning" name="category_id">
          <% categories.forEach((e, i)=> { if(e.id == entity.category_id) {%>
            <option value="<%=e.id%>" selected>
              <%=e.name%>
            </option>
            <% } else { %>
              <option value="<%=e.id%>">
                <%=e.name%>
              </option>
              <% }}) %>
        </select>
      </td>
      <td>
        <form class="text-center d-flex gap-3" action="/products" method="post">
          <button type="submit" class="btn btn-outline-success" formaction="/insert_products">Create</button>
          <button type="submit" class="btn btn-outline-warning" formaction="/update_products">Update</button>
        </form>
      </td>
    </tr>
  </thead>
  <!-- DISPLAY LIST OF DATA -->
  <tbody>
    <% data.forEach((e, i)=> {%>
      <tr style="vertical-align: middle;">
        <td>
          <img src="<%= e.image %>" alt="<%= e.image %>" style="width: 64px; object-fit: cover;">
        </td>
        <td>
          <%= e.id %>
        </td>
        <td>
          <%= e.name %>
        </td>
        <td>
          <%= e.price %>
        </td>
        <td>
          <%= e.quantity %>
        </td>
        <td>
          <%= date(e.regDate, 'LLLL' )%>
        </td>
        <td>
          <%= e.category_name %>
        </td>
        <td class="text-end">
          <a href="/products/<%-data[i].id%>">detail</a>
          <button onclick="
            if(confirm('Xác nhận xóa <%-data[i].name%>')) location.href = `/delete_products/<%-data[i].id%>`
          " type="button" class="btn btn-outline-danger">delete</button>
        </td>
      </tr>
      <% }) %>
  </tbody>
</table>